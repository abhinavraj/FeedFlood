<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhinav.feedflood"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.abhinav.feedflood.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.abhinav.feedflood.NewsSummaryActivity"
            android:label="News Summary" >
        </activity>
        
        <activity
            android:name="com.abhinav.feedflood.CategoryListActivity"
            android:label="News Categories" >
        </activity>
        
        <activity
            android:name="com.abhinav.feedflood.CategoryNewsListActivity"
            android:label="News Categories" >
        </activity>
        
        <activity
            android:name="com.abhinav.feedflood.SearchResultNewsListActivity"
            android:label="Search results" >
        </activity>
    </application>

</manifest>
